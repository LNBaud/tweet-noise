import logging
from datetime import datetime, timezone
from config import FILEDIR, FILEBREAK

class IfClassification:

    def __init__(self):

        self.current_file = 'C:\\Users\\Hélène\\Downloads\\tweets_2018-10-31T09_24_43.923494.txt'
        self.f_line_count = 1
        self.nf_line_count =0
        self.new_file = FILEDIR + "tweets_" + datetime.now().strftime("%Y-%m-%dT%H:%M:%S.%f") + ".txt"


    def open_write(self):
        with open(self.current_file, "a+", encoding='utf-8') as f:
            data = f.readlines()
            print (data, self.f_line_count)
            data_split=data.split(',')

            self.nb_follower = data_split[0]
            self.nb_following = data_split[1]
            self.verified = data_split[2]
            self.reputation = data_split[3]
            self.age = data_split[4]
            self.nb_tweets = data_split[5]
            self.proportion_spamwords= data_split[6]
            self.orthographe= data_split[7]
            self.nb_emoji= data_split[8]
            self.RT = data_split[9]
            self.spam = data_split [10]
            with open(self.new_file, "a+", encoding='utf-8') as nf:
                nf.write(data + classification(self) + "\n")
            self.nf_line_count += 1

            if self.nf_line_count > FILEBREAK:
                logging.info("Closing file {}".format(self.current_file))
                self.current_file = FILEDIR + "tweets_" + datetime.now().strftime("%Y-%m-%dT%H:%M:%S.%f") + ".txt"
                self.nf_line_count = 0
        self.f_line_count +=1



    def classification(self):
        potentialspam = true
        verdict =0
        if self.nb_emoji == 0 :
            if self.proportion_spamword < 0.1 :
                if self.orthgraphe > 0.5 :
                    if RT == True :
                        potentialspam = false
        if potentialspam == self.spam :
            verdict =1
        return potentialspam + ","+ verdict


fichier = IfClassification()
fichier.open_write()